{
    "doctype": "DocType",
    "name": "Blog",
    "engine": "InnoDB",
    "is_submittable": 0,
    "issingle": 0,
    "istable": 0,
    "module": "paas",
    "permissions": [
        {
            "create": 1,
            "delete": 1,
            "email": 1,
            "export": 1,
            "print": 1,
            "read": 1,
            "report": 1,
            "role": "System Manager",
            "share": 1,
            "write": 1
        },
        {
            "role": "Guest",
            "read": 1
        }
    ],
    "sort_field": "modified",
    "sort_order": "DESC",
    "track_changes": 1,
    "fields": [
        {
            "fieldname": "title",
            "fieldtype": "Data",
            "label": "Title",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "short_description",
            "fieldtype": "Small Text",
            "label": "Short Description"
        },
        {
            "fieldname": "description",
            "fieldtype": "Text Editor",
            "label": "Content",
            "reqd": 1
        },
        {
            "fieldname": "type",
            "fieldtype": "Select",
            "label": "Type",
            "options": "blog\nnotification",
            "default": "blog",
            "in_list_view": 1
        },
        {
            "fieldname": "published_at",
            "fieldtype": "Datetime",
            "label": "Published At"
        },
        {
            "fieldname": "active",
            "fieldtype": "Check",
            "label": "Active",
            "default": "1"
        },
        {
            "fieldname": "img",
            "fieldtype": "Attach Image",
            "label": "Image"
        },
        {
            "fieldname": "author",
            "fieldtype": "Link",
            "label": "Author",
            "options": "User"
        }
    ]
}