{
    "name": "Repeating Order",
    "module": "paas",
    "engine": "InnoDB",
    "istable": 0,
    "doctype": "DocType",
    "permissions": [
        {
            "role": "System Manager",
            "read": 1,
            "write": 1,
            "create": 1,
            "delete": 1
        },
        {
            "role": "PaaS User",
            "read": 1,
            "write": 1,
            "create": 1,
            "delete": 1,
            "permlevel": 0,
            "if_owner": 1
        }
    ],
    "fields": [
        {
            "fieldname": "user",
            "fieldtype": "Link",
            "label": "User",
            "options": "User",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "original_order",
            "fieldtype": "Link",
            "label": "Original Order",
            "options": "Order",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "start_date",
            "fieldtype": "Date",
            "label": "Start Date",
            "reqd": 1
        },
        {
            "fieldname": "end_date",
            "fieldtype": "Date",
            "label": "End Date"
        },
        {
            "fieldname": "cron_pattern",
            "fieldtype": "Data",
            "label": "Cron Pattern",
            "description": "e.g., '0 0 * * 0' for every Sunday at midnight",
            "reqd": 1
        },
        {
            "fieldname": "is_active",
            "fieldtype": "Check",
            "label": "Is Active",
            "default": "1"
        },
        {
            "fieldname": "next_execution",
            "fieldtype": "Datetime",
            "label": "Next Execution"
        },
        {
            "fieldname": "last_execution",
            "fieldtype": "Datetime",
            "label": "Last Execution",
            "read_only": 1
        }
    ]
}