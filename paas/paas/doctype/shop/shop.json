{
    "doctype": "DocType",
    "name": "Shop",
    "engine": "InnoDB",
    "autoname": "field:shop_name",
    "allow_rename": 1,
    "is_submittable": 0,
    "issingle": 0,
    "istable": 0,
    "module": "paas",
    "permissions": [
        {
            "create": 1,
            "delete": 1,
            "email": 1,
            "export": 1,
            "print": 1,
            "read": 1,
            "report": 1,
            "role": "System Manager",
            "share": 1,
            "write": 1
        },
        {
            "role": "Seller",
            "read": 1,
            "write": 1
        }
    ],
    "sort_field": "modified",
    "sort_order": "DESC",
    "track_changes": 1,
    "fields": [
        {
            "fieldname": "shop_name",
            "fieldtype": "Data",
            "label": "Shop Name",
            "reqd": 1,
            "unique": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "user",
            "fieldtype": "Link",
            "label": "User",
            "options": "User",
            "reqd": 1
        },
        {
            "fieldname": "logo",
            "fieldtype": "Attach Image",
            "label": "Logo"
        },
        {
            "fieldname": "cover_photo",
            "fieldtype": "Attach Image",
            "label": "Cover Photo"
        },
        {
            "fieldname": "phone",
            "fieldtype": "Phone",
            "label": "Phone"
        },
        {
            "fieldname": "address",
            "fieldtype": "Small Text",
            "label": "Address"
        },
        {
            "fieldname": "location",
            "fieldtype": "Geolocation",
            "label": "Location"
        },
        {
            "fieldname": "status",
            "fieldtype": "Select",
            "label": "Status",
            "options": "new\nedited\napproved\nrejected\ninactive",
            "default": "new",
            "in_list_view": 1
        },
        {
            "fieldname": "shop_type",
            "fieldtype": "Link",
            "label": "Shop Type",
            "options": "Shop Type"
        },
        {
            "fieldname": "is_ecommerce",
            "fieldtype": "Check",
            "label": "Is Ecommerce (Nationwide)"
        },
        {
            "fieldname": "type",
            "fieldtype": "Select",
            "hidden": 1,
            "label": "Type (Legacy)",
            "options": "shop\nrestaurant\nstore\nservice\nliquor\npharmacy\nwater\nhome_care\necommerce\nlaundry"
        },
        {
            "fieldname": "min_amount",
            "fieldtype": "Currency",
            "label": "Minimum Amount"
        },
        {
            "fieldname": "price",
            "fieldtype": "Currency",
            "label": "Base Delivery Price"
        },
        {
            "fieldname": "price_per_km",
            "fieldtype": "Currency",
            "label": "Price Per KM"
        },
        {
            "fieldname": "tax",
            "fieldtype": "Percent",
            "label": "Tax"
        },
        {
            "fieldname": "delivery_time_type",
            "fieldtype": "Select",
            "label": "Delivery Time Type",
            "options": "minute\nhour\nday\nmonth"
        },
        {
            "fieldname": "delivery_time_from",
            "fieldtype": "Data",
            "label": "Delivery Time From"
        },
        {
            "fieldname": "delivery_time_to",
            "fieldtype": "Data",
            "label": "Delivery Time To"
        },
        {
            "fieldname": "open",
            "fieldtype": "Check",
            "label": "Open",
            "default": "1"
        },
        {
            "fieldname": "visibility",
            "fieldtype": "Check",
            "label": "Visible",
            "default": "1"
        },
        {
            "fieldname": "verify",
            "fieldtype": "Check",
            "label": "Verified",
            "default": "0"
        },
        {
            "fieldname": "uuid",
            "fieldtype": "Data",
            "label": "UUID",
            "reqd": 1,
            "unique": 1,
            "no_copy": 1,
            "read_only": 1
        },
        {
            "fieldname": "slug",
            "fieldtype": "Data",
            "label": "Slug",
            "unique": 1
        },
        {
            "fieldname": "service_fee",
            "fieldtype": "Currency",
            "label": "Service Fee"
        },
        {
            "fieldname": "percentage",
            "fieldtype": "Percent",
            "label": "Percentage"
        },
        {
            "fieldname": "delivery",
            "fieldtype": "Check",
            "label": "Delivery",
            "default": "0"
        },
        {
            "fieldname": "pickup",
            "fieldtype": "Check",
            "label": "Pickup",
            "default": "0"
        },
        {
            "fieldname": "booking_working_days",
            "fieldtype": "Table",
            "label": "Booking Working Days",
            "options": "Shop Booking Working Day"
        },
        {
            "fieldname": "booking_closed_dates",
            "fieldtype": "Table",
            "label": "Booking Closed Dates",
            "options": "Shop Booking Closed Date"
        },
        {
            "fieldname": "auto_approve_orders",
            "fieldtype": "Check",
            "label": "Auto Approve Orders",
            "default": "0",
            "description": "Enable auto-approval for orders in this shop. This will only take effect if the global 'Auto Approve All Orders' setting is also enabled by the admin."
        },
        {
            "fieldname": "translations",
            "fieldtype": "Table",
            "label": "Translations",
            "options": "Shop Translation"
        },
        {
            "fieldname": "enable_cod",
            "fieldtype": "Check",
            "label": "Enable COD? (Cash on Delivery)",
            "default": "1",
            "description": "If disabled, customers cannot choose Cash on Delivery for this shop."
        },
        {
            "fieldname": "warehouse",
            "fieldtype": "Link",
            "label": "Warehouse",
            "options": "Warehouse",
            "description": "The warehouse associated with this shop for stock management."
        }
    ]
}